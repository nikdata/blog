{
    "name": "nikblog",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
     "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "settings": {
            "jupyter.interactiveWindow.textEditor.executeSelection": true,
            // Disable A/B experiments from VSCode
            "python.experiments.enabled": false,
            "workbench.enableExperiments": false,
            "jupyter.experiments.enabled": false,
            // Enable Ruff for linting
            "editor.formatOnSaveMode": false,
            "editor.defaultFormatter": "charliemarsh.ruff"
        },
        "vscode": {
            "extensions": [
                // Documentation Extensions
                "quarto.quarto",
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                // Docker Supporting Extensions
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                // Python Extensions
                "ms-python.python",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                // Github Actions
                "github.vscode-github-actions"
            ]
        }
    },
    "postCreateCommand": "chmod +x setup.sh && ./setup.sh",
    "runArgs": [
        "--name", "nikblog"
    ]
}