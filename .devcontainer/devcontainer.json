{
    "name": "${localEnv:PROJECT_A_NAME:nikblog}",
    // "image": "python:3.10",
    "build": {
        "dockerfile": "dockerfile",
        "args": {
            "ENV_NAME": "${localEnv:PROJECT_A_NAME:nikblog}",
            "PYTHON_VER": "${localEnv:PYTHON_VER:3.12}",
            "QUARTO_VER": "${localEnv:QUARTO_VER:1.4.555}"
        }
    },
    "customizations": {
        "settings": {
            "python.defaultInterpreterPath": "/opt/conda/envs/${localEnv:PROJECT_A_NAME:nikblog}/bin/python3",
            "python.selectInterpreter": "/opt/conda/envs/${localEnv:PROJECT_A_NAME:nikblog}/bin/python3"
        },
        "vscode": {
            "extensions": [
                // Documentation Extensions
                "quarto.quarto",
                "purocean.drawio-preview",
                "redhat.vscode-yaml",
                "yzhang.markdown-all-in-one",
                // Docker Supporting Extensions
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                // Python Extensions
                "ms-python.python",
                "ms-toolsai.jupyter",
                // Github Actions
                "github.vscode-github-actions"
            ]
        }
    },
    "runArgs": [
        // "--name", "${localEnv:USER}_blogcontainer"
        "--name", "nik_blog_container"
    ]

    // Optional, mount local volume:
    // "mounts": [
    //     "source=${localEnv:HOME},target=/home,type=bind,consistency=cache"
    // ]
    // "remoteEnv": {
    //     "MY_VAR": "${localEnv:MY_VAR:test_var}"
    // },
    // "runArgs": [
    //     "--env-file",
    //     ".devcontainer/devcontainer.env"
    // ],
    // "postCreateCommand": "python3 tests/test1.py"
}